{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "Submissions.jsonld": {
      "type": "object",
      "description": "",
      "deprecated": false,
      "properties": {
        "@id": {
          "readOnly": true,
          "type": "string"
        },
        "@type": {
          "readOnly": true,
          "type": "string"
        },
        "submissions": {
          "description": "The number of submissions",
          "type": "integer"
        },
        "characterCount": {
          "description": "The total number of characters in all submissions",
          "type": "integer"
        },
        "wordCount": {
          "description": "The total number of words in all submissions",
          "type": "integer"
        },
        "sentenceCount": {
          "description": "The total number of sentences in all submissions",
          "type": "integer"
        },
        "date": {
          "description": "The first day of the period covered by the metrics.",
          "type": "string"
        },
        "part": {
          "description": "The part this entry belongs to. Null = \"Self\" entry",
          "anyOf": [
            {
              "$ref": "#/definitions/Part.jsonld-entry.read.item_part.read.item"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "@id",
        "@type",
        "submissions",
        "characterCount",
        "wordCount",
        "sentenceCount",
        "date",
        "part"
      ]
    },
    "Part.jsonld-entry.read.item_part.read.item": {
      "type": "object",
      "description": "",
      "deprecated": false,
      "properties": {
        "@id": {
          "readOnly": true,
          "type": "string"
        },
        "@type": {
          "readOnly": true,
          "type": "string"
        },
        "name": {
          "minLength": 1,
          "maxLength": 100,
          "type": "string"
        },
        "colors": {
          "minItems": 5,
          "maxItems": 5,
          "uniqueItems": true,
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "@id",
        "@type",
        "name",
        "colors"
      ]
    }
  },
  "properties": {
    "member": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Submissions.jsonld"
      }
    },
    "totalItems": {
      "type": "integer",
      "minimum": 0
    },
    "view": {
      "type": "object",
      "properties": {
        "@id": {
          "type": "string",
          "format": "iri-reference"
        },
        "@type": {
          "type": "string"
        },
        "first": {
          "type": "string",
          "format": "iri-reference"
        },
        "last": {
          "type": "string",
          "format": "iri-reference"
        },
        "previous": {
          "type": "string",
          "format": "iri-reference"
        },
        "next": {
          "type": "string",
          "format": "iri-reference"
        }
      },
      "example": {
        "@id": "string",
        "type": "string",
        "first": "string",
        "last": "string",
        "previous": "string",
        "next": "string"
      }
    },
    "search": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        },
        "template": {
          "type": "string"
        },
        "variableRepresentation": {
          "type": "string"
        },
        "mapping": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "type": "string"
              },
              "variable": {
                "type": "string"
              },
              "property": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "required": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "member"
  ]
}
