{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "token": {
      "type": "string",
      "description": "JWT token, valid for 24 hours"
    },
    "refresh_token": {
      "type": "string",
      "description": "Refresh token, valid for 30 days"
    }
  },
  "required": ["token", "refresh_token"],
  "additionalProperties": false
}
